<%- include("../partials/header.ejs") %>
<div class="ui container">
    <h1 class="ui header">New Student</h1>
    <form class="ui form" action="/students" method="POST">
        <div class="fields">
          <div class="field">
            <label>First name</label>
            <input type="text" placeholder="First Name" name="person[first]" required>
          </div>
          <div class="field">
            <label>Last name</label>
            <input type="text" placeholder="Last Name" name="person[last]" required>
          </div>
        </div>
        <div class="field">
          <label>Avatar</label>
          <input type="text" placeholder="Image URL" name="person[img]" required>
        </div>
        <div class="field">
            <label>Email</label>
            <input type="email" placeholder="Email" name="person[email]" required>
        </div>
        <div class="field">
            <label>Major</label>
            <input type="text" placeholder="Major" name="person[major]" required>
        </div>
        <div class="field">
          <label>Student ID</label>
          <input type="text" placeholder="Student ID" name="person[studentId]" minlength="7" maxlength="7" required>
      </div>
        <div class="field">
            <label>Short Bio</label>
            <textarea rows="2" name="person[bio]"></textarea>
        </div>
        <input type="submit" value="Submit" class="ui primary button">
    </form>
</div>
<%- include("../partials/footer.ejs") %>