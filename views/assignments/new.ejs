<%- include("../partials/header.ejs") %>
<div class="ui container">
    <h1 class="ui header">New Assignment</h1>
    <hr>
    <form class="ui form" action="/assignments" method="POST">
        <div class="fields">
          <div class="field">
            <label>Name</label>
            <input type="text" placeholder="Assignment Name" name="doc[name]" required>
          </div>
          <div class="field">
            <label>Points</label>
            <input type="text" placeholder="Points" name="doc[points]" required>
          </div>
        </div>
        <div class="field">
            <label>Released</label>
            <input type="text" placeholder="Release Date" name="doc[released]" required>
        </div>
        <div class="field">
            <label>Due</label>
            <input type="text" placeholder="Due Date" name="doc[due]" required>
        </div>
        <input type="submit" value="Create" class="ui green button">
        <a href="/assignments" class="ui red button">Cancel</a> 
    </form>
</div>
<%- include("../partials/footer.ejs") %>