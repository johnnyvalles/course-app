<%- include("./partials/header.ejs") %>
<div class="ui container">
    <div class="ui centered grid">
        <div class="column">
            <h2 class="ui teal image header">
              <div class="content">Register for an account</div>
            </h2>
            <form action="/register" method="post" class="ui large form">
              <div class="ui stacked segment">
                <div class="field">
                    <input type="text" name="first" placeholder="First name" required>
                </div>
                <div class="field">
                  <input type="text" name="last" placeholder="Last name" required>
                </div>
                <div class="field">
                  <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="field">
                  <div class="ui selection dropdown">
                    <input type="hidden" name="major">
                    <i class="dropdown icon"></i>
                    <div class="default text">Major</div>
                    <div class="menu">
                      <div class="item" data-value="CS" data-text="Computer Science">Computer Science</div>
                      <div class="item" data-value="CSE" data-text="Computer Science & Engineering">Computer Science & Engineering</div>
                      <div class="item" data-value="CE" data-text="Computer Engineering">Computer Engineering</div>
                      <div class="item" data-value="ELE" data-text="Electrical Engineering">Electrical Engineering</div>
                      <div class="item" data-value="SE" data-text="Software Engineering">Software Engineering</div>
                      <div class="item" data-value="CGS" data-text="Computer Game Science">Computer Game Science</div>
                      <div class="item" data-value="INF" data-text="Informatics">Informatics</div>
                    </div>
                  </div>
                </div>
                <div class="field">
                  <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input type="text" name="username" placeholder="Username" required>
                  </div>
                </div>
                <div class="field">
                  <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input type="password" name="password" placeholder="Password" required>
                  </div>
                </div>
                <input type="submit" value="Register" class="ui fluid large teal submit button">
              </div>
              <div class="ui message">Already registered? <a href="/login">Login into your account</a></div>
            </form>
        </div>
    </div>
</div>
<%- include("./partials/footer.ejs") %>